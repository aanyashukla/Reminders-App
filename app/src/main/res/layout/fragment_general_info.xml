<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_doctor"
            android:layout_width="match_parent"
            style="@style/Card"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/image_view_doctor"
                    style="@style/Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/icon_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_view_doctor_heading"
                    style="@style/Text.Heading"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_view_doctor"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:text="Doctor Appointment Day"/>

                <TextView
                    android:id="@+id/text_view_doctor_value"
                    style="@style/Text.Value"
                    app:layout_constraintTop_toBottomOf="@id/text_view_doctor_heading"
                    app:layout_constraintStart_toStartOf="@id/text_view_doctor_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Monday"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_exam_date"
            android:layout_width="match_parent"
            style="@style/Card"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/image_view_exam_date"
                    style="@style/Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/icon_exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_view_exam_date_heading"
                    style="@style/Text.Heading"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_view_exam_date"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:text="Exam Date"/>

                <TextView
                    android:id="@+id/text_view_exam_date_value"
                    style="@style/Text.Value"
                    app:layout_constraintTop_toBottomOf="@id/text_view_exam_date_heading"
                    app:layout_constraintStart_toStartOf="@id/text_view_exam_date_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10-03-25"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_birthday"
            android:layout_width="match_parent"
            style="@style/Card"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/image_view_birthday"
                    style="@style/Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/icon_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_view_birthday_heading"
                    style="@style/Text.Heading"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_view_birthday"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:text="Papa's Birthday"/>

                <TextView
                    android:id="@+id/text_view_birthday_value"
                    style="@style/Text.Value"
                    app:layout_constraintTop_toBottomOf="@id/text_view_birthday_heading"
                    app:layout_constraintStart_toStartOf="@id/text_view_birthday_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="01-12-1965"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>